# Use an official Python runtime as the parent image
FROM python:3.12.12-slim

# Set the working directory in the container to /app
WORKDIR /project-app

COPY requirements-api.txt .

#Download curl
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Install any needed packages specified in requirements.txt
RUN pip install --trusted-host pypi.python.org -r requirements-api.txt

# Copy the current directory contents into the container at /app
COPY . /project-app

#Create the directory to store the model
RUN mkdir -p/project-app/models

#Download the genre prediction based on posters
RUN curl -L "https://docs.google.com/uc?export=download&id=1i03Dkl4o5ic-t-v-IfkoA8WXvLkUFehQ" > /project-app/models/movie_genre_cpu.pt

#Download the OOD model
RUN curl -L "https://docs.google.com/uc?export=download&id=1i03Dkl4o5ic-t-v-IfkoA8WXvLkUFehQ" > /project-app/models/movie_genre_cpu.pt

# Make port 5000 available to the world outside this container
EXPOSE 8000

# Define environment variable for Flask to run in production mode
ENV FLASK_ENV=production

# Run mnist_api.py when the container launchess
CMD ["python", "main.py"]
# Use an official Python runtime as the parent image
FROM python:3.12.12-slim

# Installation des dépendances système pour compiler Annoy
RUN apt-get update && apt-get install -y \
    build-essential \
    g++ \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*
    
# Set the working directory in the container to /app
WORKDIR /project-app

COPY requirements-api.txt .

# Install any needed packages specified in requirements.txt
RUN pip install --no-cache-dir --trusted-host pypi.python.org -r requirements-api.txt

#Download curl
#RUN apt-get update && apt-get install -y curl grep sed && rm -rf /var/lib/apt/lists/*

# Copy the current directory contents into the container at /app
COPY . /project-app

#Create the directory to store the model
RUN mkdir -p models

# 1. On installe gdown (outil spécialisé pour Google Drive)
RUN pip install --no-cache-dir gdown

#Download the genre prediction based on posters
RUN gdown --id 1i03Dkl4o5ic-t-v-IfkoA8WXvLkUFehQ -O models/movie_genre_cpu.pt

#Download the OOD model
RUN gdown --id 1IWhq4da0x6qm480RiyHYDUMmDgbPDKYK -O models/ood_detector.joblib

#Download the genre prediction based on synopsis
RUN gdown --id 1clzxN-386oNMdPLYIco9-YMyctZxHJAv -O models/genre_model.pth
RUN gdown --id 1B7CCrCvr79YkJs7f2UrInIvzTQROStOL -O models/movie_plots.ann 
RUN gdown --id 1RYxUL5oiNVZFAyetZekgNl_5WR-6LkCr -O models/movie_data_processed.pkl

# Make port 5000 available to the world outside this container
EXPOSE 8000

# Define environment variable for Flask to run in production mode
ENV FLASK_ENV=production

# Run mnist_api.py when the container launchess
CMD ["python", "main.py"]